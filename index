    <script>
        // Funci√≥n para mostrar la p√°gina principal con transici√≥n
        function showMainContent() {
            const presentation = document.querySelector('.presentation');
            const mainContent = document.querySelector('.main-content');

            presentation.style.opacity = '0';
            setTimeout(() => {
                presentation.style.display = 'none';
                mainContent.style.display = 'block';
                setTimeout(() => {
                    mainContent.style.opacity = '1';
                }, 50);
            }, 500); // Duraci√≥n de la transici√≥n
        }

        // Funci√≥n para mostrar/ocultar el men√∫ desplegable
        function toggleMenu() {
            const menu = document.getElementById("menuDropdown");
            if (menu.style.display === "block") {
                menu.style.display = "none";
            } else {
                menu.style.display = "block";
            }
        }

        // Funci√≥n para activar/desactivar el modo oscuro
        function toggleDarkMode() {
            document.body.classList.toggle("dark-mode");
            // Cerrar el men√∫ despu√©s de cambiar el modo
            toggleMenu();
        }

        // Cerrar el men√∫ si se hace clic fuera de √©l
        window.onclick = function(event) {
            const menu = document.getElementById("menuDropdown");
            if (!event.target.matches('.menu-icon') && !event.target.matches('.menu-dropdown a')) {
                if (menu.style.display === "block") {
                    menu.style.display = "none";
                }
            }
        }
    </script>
